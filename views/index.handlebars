<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block}}
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block}}
        {{/if}}
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <input type="text" id="new-burger-input" name="new-burger">
    </div>

    <button type="submit">Submit</button>
</form>